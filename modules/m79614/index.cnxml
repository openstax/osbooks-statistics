      <m:mi>H</m:mi><m:mtext> or </m:mtext><m:mi>S</m:mi>
     </m:mrow>
    <m:mo>)</m:mo></m:mrow><m:mo>=</m:mo><m:mi>P</m:mi><m:mrow><m:mo>(</m:mo>
     <m:mi>H</m:mi>
    <m:mo>)</m:mo></m:mrow><m:mo>+</m:mo><m:mi>P</m:mi><m:mrow><m:mo>(</m:mo>
     <m:mi>S</m:mi>
    <m:mo>)</m:mo></m:mrow>
