       <m:mi>y</m:mi>
       <m:mn>2</m:mn>
      </m:msup>
      <m:mo>−</m:mo><m:msup>
       <m:mrow>
        <m:mo stretchy="false">[</m:mo><m:msup>
         <m:mrow>
          <m:msup>
           <m:mstyle mathsize="140%" displaystyle="true"><m:mo>∑</m:mo></m:mstyle>
           <m:mtext>​</m:mtext>
          </m:msup>

         </m:mrow>
         <m:mtext>​</m:mtext>
        </m:msup>
        <m:mi>y</m:mi><m:mo stretchy="false">]</m:mo>
