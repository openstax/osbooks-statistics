    </m:msup>
    <m:mi>x</m:mi><m:mo stretchy="false">]</m:mo><m:mo stretchy="false">[</m:mo><m:msup>
     <m:mrow>
      <m:msup>
       <m:mstyle mathsize="140%" displaystyle="true"><m:mo>∑</m:mo></m:mstyle>
