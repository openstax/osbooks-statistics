      </m:msup>

     </m:mrow>
     <m:mtext>​</m:mtext>
    </m:msup>
    <m:mi>y</m:mi><m:mo stretchy="false">]</m:mo>
   </m:mrow>
   <m:mrow>
    <m:msqrt>
     <m:mrow>
      <m:mo stretchy="false">(</m:mo><m:mi>n</m:mi><m:msup>
       <m:mrow>
        <m:msup>
         <m:mstyle mathsize="140%" displaystyle="true"><m:mo>∑</m:mo></m:mstyle>
