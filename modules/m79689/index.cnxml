       <m:mrow>
        <m:mo stretchy="false">[</m:mo><m:msup>
         <m:mrow>
          <m:msup>
           <m:mstyle mathsize="140%" displaystyle="true"><m:mo>∑</m:mo></m:mstyle>
           <m:mtext>​</m:mtext>
          </m:msup>

         </m:mrow>
         <m:mtext>​</m:mtext>
        </m:msup>
