       </m:mrow>
       <m:mn>2</m:mn>
      </m:msup>
      <m:mo stretchy="false">)</m:mo><m:mo stretchy="false">(</m:mo><m:mi>n</m:mi><m:msup>
       <m:mrow>
        <m:msup>
         <m:mstyle mathsize="140%" displaystyle="true"><m:mo>∑</m:mo></m:mstyle>
         <m:mtext>​</m:mtext>
        </m:msup>

       </m:mrow>
       <m:mtext>​</m:mtext>
      </m:msup>
