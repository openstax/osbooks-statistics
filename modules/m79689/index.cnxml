<para id="fs-id1164566504168"><m:math>
 <m:semantics>
  <m:mrow>
   <m:mi>a</m:mi><m:mo>=</m:mo><m:mover accent="true">
    <m:mi>y</m:mi>
    <m:mo>¯</m:mo>
   </m:mover>
   <m:mo>−</m:mo><m:mi>b</m:mi><m:mover accent="true">
    <m:mi>x</m:mi>
    <m:mo>¯</m:mo>
   </m:mover>

  </m:mrow>
 </m:semantics>
</m:math></para>
<para id="fs-id1164564832447">and <m:math>
 <m:semantics>
  <m:mrow>
